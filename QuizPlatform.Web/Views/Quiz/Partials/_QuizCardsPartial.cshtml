@model List<QuizPlatform.Core.Entities.Quiz>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var quiz in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm rounded-4">
                    @if (!string.IsNullOrEmpty(quiz.Image))
                    {
                        <img src="@quiz.Image" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@quiz.Name" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@quiz.Name</h5>
                        <p class="card-text">@quiz.Description</p>
                        <p class="text-muted mb-2"><i class="bi bi-calendar"></i> @quiz.Date.ToShortDateString()</p>
                        <a asp-controller="Quiz"
                           asp-action="Details"
                           asp-route-id="@quiz.Id"
                           class="btn btn-primary mt-auto w-100">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning">No quizzes found.</div>
}
