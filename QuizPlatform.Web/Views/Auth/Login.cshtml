@model QuizPlatform.Core.DTOs.LoginDto

@{
    ViewData["Title"] = "Login | Quiz Platform";
    Layout = "_AuthLayout";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card login-card shadow">
        <div class="card-body p-5">
            <h2 class="text-center mb-3 login-title">Quiz Platform</h2>
            <p class="text-center text-muted mb-4">Login to your account</p>

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }
            <form asp-action="Login" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">Sign In</button>

                <div class="text-center">
                    <small>
                        Don't have an account?
                        <a asp-action="Register" asp-controller="Auth" class="register-link">Register here</a>
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
