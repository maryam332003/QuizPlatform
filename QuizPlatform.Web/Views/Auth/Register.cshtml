@model QuizPlatform.Core.DTOs.RegisterDto

@{
    ViewData["Title"] = "Register | Quiz Platform";
    Layout = "_AuthLayout";
}
<link rel="stylesheet" href="~/css/site.css" />

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-5">
        <div class="card text-center">
            <h2 class="text-center mb-3 login-title">Quiz Platform</h2>
            <h5 class="mb-4">Create your account</h5>


            @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }
            <form asp-action="Register" method="post">
                <div class="form-group mb-3 text-start">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 text-start">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4 text-start">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">✅ Register</button>

                <div class="mt-3">
                    <small>
                        Already have an account?
                        <a asp-action="Login" asp-controller="Auth" class="link-secondary">Login here</a>
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
